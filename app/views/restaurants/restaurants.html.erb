<!DOCTYPE html>
<html>
<body>

  <div class="row padding-inside-top-sm">
    <div class="col-md-offset-2 col-md-8">
      <form action="/add_restaurant" class="form-inline">

        <div class="form-group">
          <label for=""> Restaurant</label>
          <input type="text" class="form-control" name="restid" id="restid" placeholder="Restaurant Name">
        </div>

        <div class="form-group">
          <label for=""> Rating</label>
          <input type="text" class="form-control" name="rating" id="rating" placeholder="Rating">
        </div>

        <button type="submit" class="btn btn-default">Add</button>
      </form>

    </div>
  </div>

  <div class="container col-md-offset-2  padding-inside-top-sm col-md-8">
    <h2>Your Restaurants</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-md-4">Restaurant</th>
          <th class="col-md-1">Rating</th>
          <th class="col-md-1">Basic Info</th>
          <th class="col-md-2">Address/map</th>
          <th class="col-md-1"></th>
        </tr>
      </thead>

      <tbody>
        <% @ratings.each do |rating| %>
        <tr>
          <td><%= rating.restid %></td>
          <td><%= rating.rating %></td>
          <td> Basic Info</td>
          <td> Address/map</td>
          <td>
            <a href="/delete_rating/<%= rating.id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i>
            </a>
          </td>
        </tr>
        <% end %>

      </tbody>
    </table>

  </div>

  <div class="container">
    <div class="row padding-inside-top-md">

      <div class="col-md-offset-2 col-md-2">
        <a href="/userid">Main Page</a>
      </div>

      <div class="col-md-2">
        <a href="/recs">Recommendations</a>
      </div>

      <div class="col-md-2">
      </div>

      <div class="col-md-2">
      </div>

    </div>






  </body>
  </html>
